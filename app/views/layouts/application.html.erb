<!doctype html>
<html lang="en">
  
  <head>
    <meta charset="utf-8">
    <title>Moneypenny v3</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A finacial management tool by Instrument.">
    <meta name="turbolinks-root" content="/app">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Gothic+A1" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <div class="layout layout-nav-side">
      
      <%= render partial: '/partials/primary_nav' %>
      
      <div class="main-container">
        
        <%= render partial: '/partials/secondary_nav' %>
        
        <div class="container">
          <div class="row justify-content-center">
            <%= yield %>
          </div>
        </div>
      
      </div>
      
    </div>
    
  </body>
  
</html>
