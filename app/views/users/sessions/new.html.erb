<div class="col-xl-5 col-lg-6 col-md-7">
  <div class="text-center">
    <h1 class="h2">Welcome Back ðŸ‘‹</h1>
    <p class="lead">Log in to your account to continue</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { _lpchecked: 1 }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <div class="text-right">
            <small><%= link_to "Forgot password?", new_password_path(resource_name) %></small>
          </div>
        <% end %>
      </div>
      <%= f.submit "Log in", class: "btn btn-lg btn-block btn-primary", role: "button" %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <small>Don't have an account yet? <%= link_to "Create one", new_registration_path(resource_name) %></small>
      <% end %>
    <% end %>
  </div>
</div>
