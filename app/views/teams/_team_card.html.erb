<div class="col-md-6">
  <div class="card card-team">
    <div class="card-body">
      <div class="dropdown card-options">
        <button class="btn-options" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="material-icons">more_vert</i>
        </button>
        <div class="dropdown-menu dropdown-menu-right">
          <a class="dropdown-item" href="/teams/<%= team.id %>">View</a>
          <a class="dropdown-item" href="/teams/<%= team.id %>/edit">Edit</a>
          <div class="dropdown-divider"></div>
          <%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'dropdown-item text-danger' %>
        </div>
      </div>
      <div class="card-title">
        <a href="/teams/<%= team.id %>">
          <h5 data-filter-by="text" class="H5-filter-by-text"><%= team.name %></h5>
        </a>
        <span>x Projects, x Members</span>
      </div>
    </div>
  </div>
</div>